<?xml version="1.0"?>
<ruleset name="A24Studio">

 <!--
    The name attribute of the ruleset tag is displayed
    when running PHP_CodeSniffer with the -v command line
    argument.
 -->
 <description>A24Studio Coding standards</description>

 <!--
    Start by including PSR standards
 -->
 <rule ref="PSR"/>
 
 <!--
    Add generic and pear standards we wish to reuse
 -->
 <rule ref="Generic.PHP.DisallowShortOpenTag"/>
 <rule ref="Generic.Commenting.Todo"/>
 <rule ref="PEAR.Classes.ClassDeclaration"/>
 <rule ref="PEAR.Functions.FunctionCallSignature"/>
 <rule ref="PEAR.Functions.FunctionCallArgumentSpacing"/>
 <rule ref="PEAR.Functions.ValidDefaultValue"/>
 <rule ref="PEAR.Classes.ClassDeclaration"/>
 <rule ref="Squiz.Functions.GlobalFunction"/>
 <rule ref="Zend.NamingConventions.ValidVariableName"/>
 
 <!--
    Add custom sniffs
 -->
 <rule ref="A24Studio.WhiteSpace.ScopeClosingBrace"/>
 <rule ref="A24Studio.Commenting.FunctionComment"/>
 <rule ref="A24Studio.Commenting.FileComment"/>
 <rule ref="A24Studio.Commenting.InlineComment"/>
 
</ruleset>